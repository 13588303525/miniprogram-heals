<view class="main">



<view class="form-box">
    <form bindsubmit="formSubmit">
    <view>加盟信息</view>
        <input value="{{userAddress.name}}" name="name" placeholder="商户名称"/>
        <input type="digit" name="phone" value="{{userAddress.phone}}" placeholder="电话号码"/>
        <view  class='getLocationButton'>
        <view style = "width: 70%;" > <input type="digit" name="address" value="{{userAddress.address}}" placeholder="商户详细地址"/></view>
        <view style = "width: 30%; " > <button style = "width: 100px; " bindtap="joinStore">选择</button></view>
      </view>
        <button form-type="submit">保存</button>
    </form>
</view>

</view>
<hr />


<map wx:if="{{isShowStore}}" id="map" style="width: 100%; height:100%;" scale="{{scale}}" markers="{{storesLocation}}" longitude="{{longitude}}" latitude="{{latitude}}" show-location='true'>
  <cover-view class='cover-smaller'>
    <cover-image class='icon-set' bindtap='returnMapPage' src='../../icon/return.png' style="height: 10%; width: 10%;"/>
  </cover-view>
  <cover-view class='cover-smaller'>
    <cover-image class='icon-set' bindtap='returnCurrentLoaction' src='../../icon/location.png' style="height: 10%; width: 10%;"/>
  </cover-view>
</map>

<view wx:else>
  
  <button bindtap="showStore">查看周围商铺</button>
</view>
