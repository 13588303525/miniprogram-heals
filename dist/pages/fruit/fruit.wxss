/* 商品图 */
.fruit-container {display: flex;flex-direction: row;flex-wrap: wrap;justify-content: space-between;
width: 100%;border-radius: 10rpx 10rpx 10rpx 10rpx;margin-top: 80rpx;}
.fruit-item {width: 100%;overflow: hidden;border-radius: 15rpx;margin-bottom: 20rpx;background-color: white;box-shadow: 3.5rpx 3.5rpx 1rpx #d3d1d1;  display: flex;
  margin: 0 10px;}
.fruit-item .fruit-box { border-bottom-color:rgb(39, 155, 4);border-bottom-style:solid;}
.fruit-item .fruit-image { height: 150rpx;width: 20%;border:1rpx;}
.fruit-item .fruit-image image {height: 100%;width: 100%;}
.fruit-item .fruit-info {margin: 15rpx 0 10rpx 10rpx;height: 90%;width: 90%;border-bottom-color:grey;border-bottom-style:solid;}
.fruit-item .fruit-info .name {display:block;font-size:35rpx;}
.fruit-item .fruit-info .line2 {display: flex;margin-top: 10rpx;justify-content: space-between;padding-right: 20rpx;align-items: center}
.fruit-item .fruit-info .line2 image {width: 80rpx;height: 70rpx;position: relative;top: -8rpx;left: 12rpx}
.fruit-item .fruit-info .price {width: 200rpx;font-size:35rpx;color:#EE6A50}
.fruit-item .fruit-info .price .unit {font-size:20rpx;}
.fruit-item .fruit-info image {width: 50rpx;height: 50rpx;}

